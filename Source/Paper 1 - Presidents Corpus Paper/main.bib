number = {3},
pages = {959--963},
pmid = {25633673},
title = {{Tracking Discourse Complexity Preceding Alzheimer's Disease Diagnosis: A Case Study Comparing the Press Conferences of Presidents Ronald Reagan and George Herbert Walker Bush}},
volume = {45},
