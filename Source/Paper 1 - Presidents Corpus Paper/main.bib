journal = {IEEE SSCI 2014 - 2014 IEEE Symposium Series on Computational Intelligence - CICARE 2014: 2014 IEEE Symposium on Computational Intelligence in Healthcare and e-Health, Proceedings},
keywords = {Alzheimer's disease,NLP in healthcare,Natural language processing,Text classification},
number = {January},
