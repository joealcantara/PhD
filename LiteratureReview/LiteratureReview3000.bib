journal = {Alzheimer's and Dementia: Diagnosis, Assessment and Disease Monitoring},
keywords = {Alzheimer's disease,Cognitive neuropsychology,Dementia,MCI (mild cognitive impairment),MRI (magnetic resonance imaging),Machine learning,Natural language processing},
mendeley-groups = {Literature Review 3000 - Cited},
pages = {113--122},
pmid = {27239542},
title = {{Novel verbal fluency scores and structural brain imaging for prediction of cognitive outcome in mild cognitive impairment}},
