keywords = {Alzheimer's disease,Application specific processors,Computer science,Dementia,Electric breakdown,Machine learning,Medical diagnostic imaging,Natural language processing,Speech analysis,Text categorization,automatic diagnostics,character n-gram-based techniques,dementia of Alzheimer type,diseases,geriatrics,learning (artificial intelligence),lexical analysis,linguistic skills break down,machine learning,medical computing,natural language processing,natural languages,patient diagnosis,spontaneous speech},
mendeley-groups = {Literature Review 3000 - Cited},
